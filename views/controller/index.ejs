<div class="page-header">
    <h1>Photos Manage</h1>
    <a id="add_button" class="btn btn-warning btn-sm" href="/controller/photos/add">Add a Product</a>
    <a id="remove_all" href="/controller/photos/remove_all/" class="btn btn-danger btn-sm pull-right">Remove all</a>
</div>
<table id="photo_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Title</th>
            <th>Tag</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tfoot>
    <tr>
        <th>Photo</th>
        <th>Title</th>
        <th>Tag</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    </tfoot>
    <tbody>
        <% photos.forEach(function(photo, index) { %>
        <tr>
            <td>
                <a href="/controller/photos/edit?id=<%= photo._id %>"><img src=<%- photo.PhotoThumbString %> style="height: 120px; width: 120px" /></a>
            </td>
            <td>
                <%= photo.PhotoTitle %>
            </td>
            <td>
                <%= photo.PhotoTag %>
            </td>
            <td>
                <%= photo.updated_at %>
            </td>
            <td>
                <a class="btn btn-sm btn-danger" href="/controller/photos/remove?id=<%= photo._id %>" role="button">Remove</a>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<script>
$(document).ready(function() {
    var dt = $('#photo_table').DataTable({
        lengthMenu: [
            [10, 25, 50, -1],
            [10, 25, 50, "All"]
        ],
        stateSave: true,
    });
});
</script>